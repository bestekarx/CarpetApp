<?xml version="1.0" encoding="utf-8" ?>

<services:ContentPageBase
  x:Class="CarpetApp.Views.HomePage"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:cards="clr-namespace:Syncfusion.Maui.Cards;assembly=Syncfusion.Maui.Cards"
  xmlns:resx="clr-namespace:CarpetApp.Resources.Strings"
  xmlns:services="clr-namespace:CarpetApp.Services"
  BackgroundColor="{StaticResource MainBgColor}">

  <Shell.TitleView>
    <Label Style="{StaticResource NavBarTitleLabelStyle}" Text="{x:Static resx:AppStrings.Anasayfa}" />
  </Shell.TitleView>

  <ContentPage.Content>
    <Grid RowDefinitions="Auto, Auto">

      <Grid
        Grid.Row="0"
        BackgroundColor="White"
        ColumnDefinitions="Auto, 1, Auto, 1, Auto, 1, Auto"
        ColumnSpacing="0">

        <Image
          Grid.Column="0"
          Aspect="AspectFit"
          Source="add_customer" />
        <BoxView
          Grid.Column="1"
          BackgroundColor="Black"
          Style="{StaticResource Stroke}"
          Color="Black" />
        <Image
          Grid.Column="2"
          Aspect="AspectFit"
          Source="speed" />
        <BoxView Grid.Column="3" Style="{StaticResource Stroke}" />
        <Image
          Grid.Column="4"
          Aspect="AspectFit"
          Source="sms" />
        <BoxView Grid.Column="5" Style="{StaticResource Stroke}" />

        <Image
          Grid.Column="6"
          Aspect="AspectFit"
          Source="notification" />
      </Grid>

      <ScrollView Grid.Row="1">
        <VerticalStackLayout Spacing="0">
          <cards:SfCardView
            Margin="15"
            Padding="10"
            BackgroundColor="White">

            <Grid RowDefinitions="Auto,1, Auto,1, Auto,1, Auto" RowSpacing="12">
              <!--  alınacaklar  -->
              <Grid Grid.Row="0" ColumnDefinitions="Auto, *, *">
                <Image
                  Grid.Row="0"
                  Grid.Column="0"
                  Aspect="AspectFit"
                  HorizontalOptions="Start"
                  Source="received_big"
                  VerticalOptions="Center" />
                <VerticalStackLayout
                  Grid.Column="1"
                  Margin="8,0,0,0"
                  Spacing="0"
                  VerticalOptions="Center">
                  <Label Style="{StaticResource HomePageTitle}" Text="{x:Static resx:AppStrings.Alinacaklar}" />
                  <Label Style="{StaticResource HomePageDesc}" Text="Toplam: 8" />
                </VerticalStackLayout>

                <ContentView
                  Grid.Row="0"
                  Grid.Column="2"
                  HorizontalOptions="End"
                  VerticalOptions="Center">
                  <Image Aspect="AspectFit" Source="big_arrow" />
                </ContentView>
              </Grid>
              <BoxView Grid.Row="1" Style="{StaticResource Stroke}" />
              <!--  Yıkamada  -->
              <Grid Grid.Row="2" ColumnDefinitions="Auto, *, *">
                <Image
                  Grid.Row="0"
                  Grid.Column="0"
                  Aspect="AspectFit"
                  HorizontalOptions="Start"
                  Source="washed_big"
                  VerticalOptions="Center" />
                <VerticalStackLayout
                  Grid.Column="1"
                  Margin="8,0,0,0"
                  Spacing="0"
                  VerticalOptions="Center">
                  <Label Style="{StaticResource HomePageTitle}" Text="{x:Static resx:AppStrings.Yikamada}" />
                  <Label Style="{StaticResource HomePageDesc}" Text="Toplam: 8" />
                </VerticalStackLayout>

                <ContentView
                  Grid.Row="0"
                  Grid.Column="2"
                  HorizontalOptions="End"
                  VerticalOptions="Center">
                  <Image Aspect="AspectFit" Source="big_arrow" />
                </ContentView>
              </Grid>
              <BoxView Grid.Row="3" Style="{StaticResource Stroke}" />
              <!--  Dağıtılacak  -->
              <Grid Grid.Row="4" ColumnDefinitions="Auto, *, *">
                <Image
                  Grid.Row="0"
                  Grid.Column="0"
                  Aspect="AspectFit"
                  HorizontalOptions="Start"
                  Source="delivered_big"
                  VerticalOptions="Center" />
                <VerticalStackLayout
                  Grid.Column="1"
                  Margin="8,0,0,0"
                  Spacing="0"
                  VerticalOptions="Center">
                  <Label Style="{StaticResource HomePageTitle}" Text="{x:Static resx:AppStrings.Dagitilacak}" />
                  <Label Style="{StaticResource HomePageDesc}" Text="Toplam: 8" />
                </VerticalStackLayout>

                <ContentView
                  Grid.Row="0"
                  Grid.Column="2"
                  HorizontalOptions="End"
                  VerticalOptions="Center">
                  <Image Aspect="AspectFit" Source="big_arrow" />
                </ContentView>
              </Grid>
              <BoxView Grid.Row="5" Style="{StaticResource Stroke}" />
              <!--  Müşteriler  -->
              <Grid Grid.Row="6" ColumnDefinitions="Auto, *, *">
                <Image
                  Grid.Row="0"
                  Grid.Column="0"
                  Aspect="AspectFit"
                  HorizontalOptions="Start"
                  Source="users_big"
                  VerticalOptions="Center" />
                <VerticalStackLayout
                  Grid.Column="1"
                  Margin="8,0,0,0"
                  Spacing="0"
                  VerticalOptions="Center">
                  <Label Style="{StaticResource HomePageTitle}" Text="{x:Static resx:AppStrings.Musteriler}" />
                  <Label Style="{StaticResource HomePageDesc}" Text="Toplam: 8" />
                </VerticalStackLayout>

                <ContentView
                  Grid.Row="0"
                  Grid.Column="2"
                  HorizontalOptions="End"
                  VerticalOptions="Center">
                  <Image Aspect="AspectFit" Source="big_arrow" />
                </ContentView>
              </Grid>
              <BoxView Grid.Row="3" Style="{StaticResource Stroke}" />
            </Grid>
          </cards:SfCardView>

          <BoxView Style="{StaticResource Stroke}" />

          <cards:SfCardView
            Margin="15"
            Padding="10"
            BackgroundColor="White">

            <Grid RowDefinitions="Auto,1, Auto" RowSpacing="12">
              <!--  gelir & gider  -->
              <Grid
                Grid.Row="0"
                ColumnDefinitions="Auto, *, *"
                VerticalOptions="Center">
                <Image
                  Grid.Row="0"
                  Grid.Column="0"
                  Aspect="AspectFit"
                  HorizontalOptions="Start"
                  Source="try_icon_mainpage"
                  VerticalOptions="Center" />

                <Label
                  Grid.Column="1"
                  Margin="8,0,0,0"
                  Style="{StaticResource HomePageTitle}"
                  Text="{x:Static resx:AppStrings.GelirGider}" />

                <ContentView
                  Grid.Row="0"
                  Grid.Column="2"
                  HorizontalOptions="End"
                  VerticalOptions="Center">
                  <Image Aspect="AspectFit" Source="big_arrow" />
                </ContentView>
              </Grid>
              <BoxView Grid.Row="1" Style="{StaticResource Stroke}" />
              <!--  gün özeti  -->
              <Grid
                Grid.Row="2"
                ColumnDefinitions="Auto, *, *"
                VerticalOptions="Center">
                <Image
                  Grid.Row="0"
                  Grid.Column="0"
                  Aspect="AspectFit"
                  HorizontalOptions="Start"
                  Source="day_summary_mainpage"
                  VerticalOptions="Center" />

                <Label
                  Grid.Column="1"
                  Margin="8,0,0,0"
                  Style="{StaticResource HomePageTitle}"
                  Text="{x:Static resx:AppStrings.GunOzeti}" />

                <ContentView
                  Grid.Row="0"
                  Grid.Column="2"
                  HorizontalOptions="End"
                  VerticalOptions="Center">
                  <Image Aspect="AspectFit" Source="big_arrow" />
                </ContentView>
              </Grid>
            </Grid>

          </cards:SfCardView>
        </VerticalStackLayout>
      </ScrollView>


    </Grid>
  </ContentPage.Content>

</services:ContentPageBase>